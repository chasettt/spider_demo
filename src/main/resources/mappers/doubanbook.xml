<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="doubanbook">
    <select id="selectAll" resultType="entity.DbBook">
        select * from douban_book
    </select>
    <select id="selectOne" parameterType="int" resultType="entity.DbBook">
        select * from douban_book where id = #{id}
    </select>

    <insert id="addBook" parameterType="entity.DbBook">
        INSERT INTO douban_book(id,title,price,rating,star,pic,author,publisher,publishTime,descs)
        VALUES(#{id},#{title}, #{price},#{rating},#{star},#{pic},#{author},#{publisher},#{publishTime},#{desc})
    </insert>

    <update id="updateBook" parameterType="entity.DbBook">
        UPDATE douban_book
        SET
            title = #{title},
            price = #{price},
            rating = #{rating},
            star = #{star},
            pic = #{pic},
            author = #{author},
            publisher = #{publisher},
            publishTime = #{publishTime},
            descs = #{desc}
        WHERE
            id = #{id}
    </update>
</mapper>